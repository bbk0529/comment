<div class="row">
  <h1>Posts List</h1>
</div>

<div class="container">
<div class="row">
  <div class="col text-right">
      <a href="/post/new"><button type="button" class="btn btn-default !float-right"> NEW ARTICLE </button></a>
  </div>
</div>
</div>

<div class="row">
  <table class="table">
    <thead class="thead-inverse">
      <tr>
        <th>No</th>
        <th>Email</th>
        <th>Title</th>
        <th>Date </th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr onclick="document.location='/post/show/<%=post.id%>'" style="cursor:hand">
        <th scope="row"> <%=post.id%></th>
        <td> <%=post.user.email %></td>
        <td> <%=post.title %> </td>
        <td>  <%=time_ago_in_words(post.created_at)%></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
